<div class="container">
  <form action="/add" method="POST">
    <div class="input-field col s6">
      <input id="title" name="title" type="text" class="validate" required>
      <label for="title">Title</label>
      <span class="helper-text" data-error="Please, add a title"></span>
    </div>
    <div class="input-field col s6">
      <input id="price" name="price" type="number" class="validate" required>
      <label for="price">Price</label>
      <span class="helper-text" data-error="Please, add a price"></span>
    </div>
    <div class="input-field col s6">
      <input id="image" name="image" type="text" class="validate" required>
      <label for="image">Image</label>
      <span class="helper-text" data-error="Please, add an image"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
  </form>
</div>